                <label class="f-label" for="answer_5">Réponse 5</label>
    {% if errors.answer_5|length > 0 %}  
                <section id="answer_5_errors" class="f-errors-container">  
                    <ul>           
        {% for error in errors.answer_5 %}
                        <li class="f-error">{{ error }}</li>
        {% endfor %}
                    </ul>
                </section>
    {% endif %}
            </section>
            <section class="f-buttons-container">
                <input class="btn btn-l" type="submit" value="Créer"/>
            </section>
        </form>
    </section>
</article>
<script type="module" src="../../Assets/JS/App/Template/Poll/Add.js"></script>
{% endblock %}