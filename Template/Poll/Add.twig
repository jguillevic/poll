    {% if errors.answer_3|length > 0 %}   
                <section id="answer_3_errors" class="f-errors-container">  
                    <ul>            
        {% for error in errors.answer_3 %}
                        <li class="f-error">{{ error }}</li>
        {% endfor %}
                    </ul>
                </section>
    {% endif %}
            </section>
            <section id="answer_4_group" class="f-group {% if errors.answer_4|length > 0 %}f-group-errors{% endif %}">
                <input class="f-input" type="text" id="answer_4" name="answer_4" value="{{ answer_4 }}" maxlength="100" placeholder=" "/>
                <label class="f-label" for="answer_4">Réponse 4</label>
    {% if errors.answer_4|length > 0 %}   
                <section id="answer_4_errors" class="f-errors-container">  
                    <ul>          
